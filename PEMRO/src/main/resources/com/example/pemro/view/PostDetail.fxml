<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            stylesheets="/com/example/pemro/view/style.css"
            fx:controller="com.example.pemro.Controller.LoginController">
    <children>
        <Pane styleClass="header-pane" prefHeight="60.0" prefWidth="500.0">
            <children>
                <Label layoutX="20.0" layoutY="15.0" text="DETAIL POSTINGAN" textFill="WHITE">
                    <font><Font name="System Bold" size="20.0" /></font>
                </Label>
            </children>
        </Pane>

        <Label layoutX="30.0" layoutY="80.0" text="Judul:"><font><Font name="System Bold" size="12.0" /></font></Label>
        <Label fx:id="titleLabel" layoutX="30.0" layoutY="100.0" text="Judul Postingan">
            <font><Font size="16.0" /></font>
        </Label>

        <Label fx:id="typeLabel" layoutX="30.0" layoutY="140.0" text="[OFFER]" textFill="#2980b9"><font><Font name="System Bold" size="14.0" /></font></Label>
        <Label fx:id="statusLabel" layoutX="120.0" layoutY="140.0" text="ACTIVE" textFill="#27ae60"><font><Font name="System Bold" size="14.0" /></font></Label>

        <Label layoutX="30.0" layoutY="180.0" text="Deskripsi:" style="-fx-font-weight: bold;" />
        <TextArea fx:id="descArea" editable="false" layoutX="30.0" layoutY="200.0" prefHeight="80.0" prefWidth="440.0" wrapText="true" />

        <VBox layoutX="30.0" layoutY="300.0" spacing="10.0">
            <children>
                <Label fx:id="detail1Label" text="-" />
                <Label fx:id="detail2Label" text="-" />
            </children>
        </VBox>

        <HBox layoutX="30.0" layoutY="350.0" spacing="10.0" alignment="CENTER_LEFT">
            <children>
                <Button styleClass="button-danger" fx:id="deleteButton" onAction="#handleDelete" text="Hapus" visible="false" />
                <Button styleClass="button" fx:id="editButton" onAction="#handleEdit" text="Edit" visible="false" style="-fx-background-color: #f39c12;" />
                <Button styleClass="button" onAction="#handleClose" text="Tutup" />
            </children>
        </HBox>
    </children>
</AnchorPane>