<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15.0" stylesheets="@style.css" prefWidth="550.0"
      fx:controller="com.example.pemro.Controller.CreatePostController"
      xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21">

    <padding>
        <Insets top="20" right="30" bottom="20" left="30"/>
    </padding>

    <Label text="BUAT POSTINGAN BARU" styleClass="header-label"
           style="-fx-text-fill: #3498db; -fx-alignment: center;"
           maxWidth="Infinity"/>

    <VBox spacing="5">
        <Label text="Judul Keahlian:"/>
        <TextField fx:id="titleField" promptText="Contoh: Jasa Desain Logo"/>
    </VBox>

    <HBox spacing="20" alignment="CENTER_LEFT">
        <Label text="Tipe Postingan:"/>
        <RadioButton fx:id="radioOffer" text="Offer (Menawarkan Jasa)" onAction="#handleTypeChange"/>
        <RadioButton fx:id="radioRequest" text="Request (Mencari Jasa)" onAction="#handleTypeChange"/>
    </HBox>

    <VBox spacing="5">
        <Label text="Deskripsi Lengkap:"/>
        <TextArea fx:id="descArea" prefHeight="100.0" promptText="Jelaskan detail keahlian Anda..." wrapText="true"/>
    </VBox>

    <VBox fx:id="offerBox" spacing="10.0" visible="false" managed="${offerBox.visible}">
        <Label text="Pengalaman (Tahun):"/>
        <TextField fx:id="experienceField" promptText="Contoh: 2"/>
        <Label text="Link Portfolio:"/>
        <TextField fx:id="portfolioField" promptText="Link Google Drive / Github / Behance"/>
    </VBox>

    <VBox fx:id="requestBox" spacing="10.0" visible="false" managed="${requestBox.visible}">
        <Label text="Deadline Pengerjaan:"/>
        <DatePicker fx:id="deadlinePicker" maxWidth="Infinity" promptText="Pilih Tanggal"/>

        <Label text="Tingkat Urgensi:"/>
        <ComboBox fx:id="urgencyCombo" maxWidth="Infinity" promptText="Pilih Tingkat Urgensi"/>
    </VBox>

    <Separator/>

    <HBox spacing="10" alignment="CENTER">
        <Button text="POSTING SEKARANG" onAction="#handleSave" styleClass="button-success" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
        <Button text="Batal" onAction="#handleCancel" styleClass="button-danger" prefWidth="100.0"/>
    </HBox>

</VBox>