<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="600.0" prefWidth="900.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pemro.Controller.DashboardController">
    <children>
        <HBox alignment="CENTER_LEFT" spacing="15.0" styleClass="header-pane">
            <padding>
                <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
            </padding>
            <children>
                <Label styleClass="header-label" text="BarterSkill Dashboard" />
                <Region HBox.hgrow="ALWAYS" />

                <Button onAction="#handleCekPermintaan" style="-fx-background-color: #e67e22; -fx-text-fill: white;" text="Cek Permintaan" />

                <TextField fx:id="searchField" promptText="Cari skill..." />
                <Button onAction="#handleSearch" text="Cari" />
                <Button onAction="#handleRefresh" text="Refresh" />
                <Button onAction="#handleCreatePost" styleClass="button-success" text="+ Buat Post" />
                <Button onAction="#handleLogout" styleClass="button-danger" text="Logout" />
            </children>
        </HBox>

        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
            <content>
                <VBox fx:id="postsContainer" spacing="15.0">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</VBox>