<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            stylesheets="/com/example/pemro/view/style.css"
            fx:controller="com.example.pemro.Controller.LoginController">
    <children>
        <Label layoutX="180.0" layoutY="35.0" text="DAFTAR AKUN BARU" textFill="#4a90e2">
            <font><Font name="System Bold" size="24.0" /></font>
        </Label>

        <TextField fx:id="fullNameField" layoutX="200.0" layoutY="100.0" prefWidth="200.0" promptText="Nama Lengkap" />
        <TextField fx:id="usernameField" layoutX="200.0" layoutY="150.0" prefWidth="200.0" promptText="Username" />
        <PasswordField fx:id="passwordField" layoutX="200.0" layoutY="200.0" prefWidth="200.0" promptText="Password" />

        <Button styleClass="button-success" fx:id="registerButton" layoutX="225.0" layoutY="260.0" mnemonicParsing="false" onAction="#handleRegister" text="DAFTAR SEKARANG" />
        <Button styleClass="button-link" fx:id="backButton" layoutX="245.0" layoutY="300.0" mnemonicParsing="false" onAction="#handleBack" text="Kembali ke Login" />
    </children>
</AnchorPane>